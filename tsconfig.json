{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": "./",
		"downlevelIteration": true,
		"noUnusedLocals": true,
		"outDir": "./dist/out-tsc",
		"sourceMap": true,
		"declaration": false,
		"module": "esnext",
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"importHelpers": true,
		"target": "es2020",
		"typeRoots": ["node_modules/@types"],
		"lib": ["es2018", "dom"],
		"paths": {
			"@app/*": ["app/*"],
			"@common/*": ["app/common/*"],
			"@env/*": ["environments/*"],
			"@feature/*": ["app/feature/*"]
		}
	},
	"angularCompilerOptions": {
		"preserveWhitespaces": false,
		"fullTemplateTypeCheck": false
	},
	"exclude": ["node_modules", "tmp"]
}
